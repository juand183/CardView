<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_margin="10dp"
    cardview:cardElevation="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#ffffffff"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

            <ImageView
                android:id="@+id/id_tv_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/zz"
                />
            <TextView
                android:id="@+id/id_tv_tex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel"
                android:textSize="18sp"/>


                <TextView
                    android:id="@+id/id_tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="New York City"
                    android:textColor="@android:color/black"
                    android:textSize="28sp"
                    android:layout_below="@id/id_tv_tex"/>
                <TextView
                    android:id="@+id/id_tv_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Day reappeared. The tempest still raged with undimnished fury; but the wind now returned to the south-east. It was a favourable change, and the tankadere again"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/id_tv_text"  />
                <TextView
                    android:id="@+id/id_tv_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTION 1"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@id/id_tv_text1"
                    android:textColor="@color/colorAccent"

                    />

                <TextView
                    android:id="@+id/id_tv_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/id_tv_text"
                    android:layout_below="@+id/id_tv_text1"
                    android:text="ACTION 2"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

            </RelativeLayout>







</LinearLayout>











</android.support.constraint.ConstraintLayout>